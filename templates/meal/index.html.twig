{% extends 'base.html.twig' %}

{% block title %}Meal - Être Végétarien!{% endblock %}

{% block body %}
<style>
    #meal .nav-search i {
        position: absolute;
        padding: 10px;
        margin-top: 2px;
        color: #aaabae;
        z-index: 2;
    }

    .nav-search input {
        background-color: transparent !important;
        padding-left: 30px;
        border-radius: 200px !important;
        -moz-border-radius: 200px !important;
        -webkit-border-radius: 200px 200px 200px 200px !important;
    }

    #meal .product-list-design {
        margin-top: 5%
    }

    #meal .product-list-design .item {
        width: 30%;
        margin-bottom: 5%;
        -webkit-box-shadow: 0px 0px 48px -20px rgba(0, 0, 0, 0.75);
        -moz-box-shadow: 0px 0px 48px -20px rgba(0, 0, 0, 0.75);
        box-shadow: 0px 0px 48px -20px rgba(0, 0, 0, 0.75);
    }

    #meal .product-list-design .item .top {
        transition-duration: .3s;
        background-color: #58D68D;
        display: flex;
        padding: 30px
    }

    #meal .product-list-design .item .top img {
        width: 80%;
        margin: auto;
        transition-duration: .3s;
    }

    #meal .product-list-design .item .bottom {
        transition-duration: .3s;
        background-color: #FFF;
        text-align: center;
        color: #000;
        padding: 5px 10px;
        height: 60px;
        display: flex;
    }

    #meal .product-list-design .item .bottom p {
        margin: auto;
        font-weight: bolder;
    }

    #meal .product-list-design .item:hover .top {
        transition-duration: .3s;
        background-color: #FFF;
    }

    #meal .product-list-design .item:hover .top img {
        transition-duration: .3s;
        transform: scale(0.9);
    }

    #meal .product-list-design .item:hover .bottom {
        transition-duration: .3s;
        background-color: #58D68D;
        height: 160px;
        margin-top: -100px;
    }

    #meal .product-list-design .item:hover .bottom p {
        margin: auto auto 13px auto;
    }

    a.item:hover {
        text-decoration: none;
    }

    @media(max-width: 991px) {
        #meal .product-list-design .item {
            width: 90%;
            margin: auto;
            margin-bottom: 5%
        }

        #meal .nav-search {
            width: 80%;
            margin-left: 10%
        }
    }
</style>
<section id="meal" class="container paddingSeperateur">
    <div class="input-group nav-search">
        <i class="fas fa-search"></i>
        <input type="text" name="search" class="form-control" placeholder="Rechercher un meal" value="">
    </div>
    <div class="product-list-design flex flex-wrap flex-between">
        {% for meal in meal %}
        <a class="item" href="{{ path('meal_show', {'id': meal.id}) }}">
            <div class="top">
                <img alt="{{ meal.nom }}" src="{{ meal.image }}" />
            </div>
            <div class="bottom">
                <p>{{ meal.nom }}</p>
            </div>
        </a>
        {% endfor %}
    </div>
</section>
{% endblock %}
{% block javascript %}
<script>
    i = 0;
    $(document).ready(function () {
        $('[name="search"]').keypress(function (e) {
            $.getJSON("/meal/search?search=" + $('[name="search"]').val())
                .then((meal) => {
                    $('.product-list-design').html("")
                    if (meal.length == 0) {
                        $('.product-list-design').html("<p class='margin-auto'>Aucun meal trouvé</p>")
                    }
                    meal.forEach((meal) => {
                        $(".product-list-design").append('<a class="item" href="/meal/' + meal.id + '"><div class= "top"><img alt="' + meal.nom + '" src="' + meal.image + '" /></div><div class="bottom"><p>' + meal.nom + '</p></div></a>')
                    })
                });
        });
    });
</script>
{% endblock %}