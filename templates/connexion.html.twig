{% extends 'base.html.twig' %}

{% block body %}
<section id="connexion" class="loginOrUp container paddingSeperateur">
    <form action="{{ path('connexion') }}" method="POST">
        <div class="shadow-1 rond-2 p-4">
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="top">
                <h1>
                    Connexion
                </h1>
            </div>
            <div class="middle">
                <div id="resultat"></div>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" class="form-control" id="email" name="_username" placeholder="Votre e-mail"
                        required>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password"
                        placeholder="Votre mot de passe" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            <div class="bottom flex flex-between">
                <div class="left">
                    <button id="btnConnexion" type="submit" class="btn btn-primary mr-1">Se connecter</button> - <a
                        href="{{ path('inscription') }}">S'inscrire</a>
                </div>
                <div class="right mtb-auto">
                    <a href="{{ path('motDePasseOublie') }}" class="motDePasseOublie"><i class="fad fa-user-secret"></i>
                        Mot de passe oubli√©</a>
                </div>
            </div>
        </div>
    </form>
</section>
{% endblock %}