{% extends 'base.html.twig' %}

{% block title %}{{user.username}} - Être végétarien!{% endblock %}

{% block body %}
<style>
main {
    background-color: #f2f2f2;
}
#profil .container.flex {
    justify-content: space-between;
    background-color: #FFF;
}
#profil .container .right .avatar {
    margin-bottom: -200px
}
#profil .container .right .avatar img {
    height: 200px;
    width: 200px;
    border-radius: 100%;
    -moz-border-radius: 100%;
    -webkit-border-radius: 100%;
    -webkit-box-shadow: 0px 0px 78px -20px rgba(0,0,0,0.75);
    -moz-box-shadow: 0px 0px 78px -20px rgba(0,0,0,0.75);
    box-shadow: 0px 0px 78px -20px rgba(0,0,0,0.75);
    border: #58D68D 10px solid
}
#profil .container .right .badge {
    height: 200px;
    width: 200px;
}
#profil .container .right .badge .flex {
    margin-left: 1%;
    margin-top: 73%;
}
#profil .container .right .badge div {
    background-color: #58D68D;
    border-radius: 100%;
    -moz-border-radius: 100%;
    -webkit-border-radius: 100%;
    height: 50px;
    width: 50px
}
#profil .container .right .badge div i {
    font-size: 25px;
    color: #FFF
}
#profil .container .left h1 {
    font-weight: bolder;
    font-size: 30px
}
#profil .container .left h2 {
    font-size: 15px
}
#profil .container .left span {
    font-size: 10px;
    font-style: italic;
    display: block;
    margin-bottom: 12px
}
#profil .container .left #btnParametre {
    border-radius: 0;
}
#timeline .container {
    background-color: #FFF;
}
#timeline .container .top h1 {
    font-weight: bolder;
    font-size: 25px
}
#timeline .container .top h1 i {
    color: #58D68D
}
#timeline .container .top p {
    font-size: 13px
}
</style>
<section id="profil" class="paddingSeperateur">
    <div class="container flex rond-2 p-4 shadow-1">
        <div class="left mtb-auto">
            <h1>{{user.username}}</h1>
            {% if user.preference is not empty %}
            <h2>{{user.preference}}</h2>
            <span>(Depuis 2 ans)</span>
            {% else %}
            <h2>Membre</h2>
            <span>(Depuis hier)</span>
            {% endif %}
            <button id="btnParametre" type="button" class="btn btn-primary mr-1"><i class="fad fa-cog"></i> Paramètre</button>
        </div>
        <div class="right">
            <div class="avatar flex"><img class="mtb-auto" src="https://arnaudjacques.ovh/img/photo.png" alt="Avatar de {{user.username}}" /></div>
            <div class="badge"><div class="flex"><i class="fas fa-carrot margin-auto"></i></div></div>
        </div>
    </div>
</section>
<section id="timeline" class="paddingSeperateur">
