{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des utilisateurs - Être Végétarien{% endblock %}

{% block body %}
<section id="panel" class="flex">
    <div class="w-100">
        <div paginationView="utilisateur">
            <table class="table table-hover contentPagination">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Username</th>
                        <th scope="col">Role</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for utilisateur in utilisateurs %}
                    <tr paginationName="utilisateur" paginationId="{{ loop.index }}">
                        <th scope="row">{{ utilisateur.id }}</th>
                        <td>{{ utilisateur.username }}</td>
                        <td>{{ utilisateur.role }}</td>
                        <td class="btnOption">
                            <a target="_BLANK" href="{{ path('user', {'id': utilisateur.id}) }}"><i
                                    class="fad fa-eye"></i></a>
                            <a href="{{ path('admin_edit_user', {'id': utilisateur.id}) }}" class="blue"><i
                                    class="fad fa-edit"></i></a>
                            <a class="red cursor-pointer" value="{{ utilisateur.id }}" data-toggle="modal"
                                data-target="#deleteModal"><i class="fad fa-times"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div aria-label="Page navigation example">
            <ul paginationBtn="utilisateur" class="pagination justify-content-end">
                <div class="btnPagination flex mr-4">
                </div>
            </ul>
        </div>
    </div>
</section>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Êtes-vous sûr de supprimer cet utilisateur ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                <button deleteUser="0" csrf-data="{{ csrf_token('delete-item') }}" type="button"
                    class="btn btn-primary">Oui</button>
            </div>
        </div>
    </div>
</div>
<script>
    addEventListener("load", () => {
        new pagination("utilisateur", 7, 10, "table-row");
    })

    $(document).on('click', '[data-target="#deleteModal"]', function (e) {
        $('[deleteUser]').attr("deleteUser", $(this).attr('value'))
    });

    $(document).on('click', '[deleteUser]', function (e) {
        id = $(this).attr('deleteUser')
        e.preventDefault();
        $.post(
            "{{ path('admin_delete_user') }}",
            {
                id: id,
                csrfData: $(this).attr('csrf-data')
            },
            function (data) {
                if (data.code == '200') {
                    location.reload();
                }
                else {
                    console.log(data)
                }
            },
            'json'
        );
    });
</script>
{% endblock %}