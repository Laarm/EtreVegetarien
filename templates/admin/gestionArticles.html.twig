{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des articles - Être Végétarien{% endblock %}

{% block body %}
<section id="panel" class="flex">
    <div class="w-100">
        <div paginationView="article">
            <table class="table table-hover contentPagination">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Contenu</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                    <tr paginationName="article" paginationId="{{ loop.index }}">
                        <th scope="row">{{ article.id }}</th>
                        <td>{{ article.nom }}</td>
                        <td>{{ article.contenu|reducContent(60) }}...</td>
                        <td class="btnOption">
                            <a target="_BLANK" href="{{ path('article_show', {'id': article.id}) }}"><i
                                    class="fad fa-eye"></i></a>
                            <a href="{{ path('admin_edit_article', {'id': article.id}) }}" class="blue"><i
                                    class="fad fa-edit"></i></a>
                            <a class="red"><i class="fad fa-times"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="flex justify-flex-end">
            <a href="{{ path('adminNewArticle') }}" class="new btn btn-primary" role="button"><i
                    class="fad fa-plus"></i>
                Nouveau
            </a>
            <ul paginationBtn="article" class="pagination justify-content-end">
                <div class="btnPagination flex mr-4">
                </div>
            </ul>
        </div>
    </div>
</section>
<script>
    addEventListener("load", () => {
        new pagination("article", 7, 10, "table-row");
    })
</script>
{% endblock %}