{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
@media(max-width: 991px) {
    #panel {
        margin-top: 56px
    }
}
</style>
<section id="panel" class="flex">
    <div class="w-100">
        <div paginationView="article">
            <table class="table table-hover contentPagination">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Contenu</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                    <tr paginationName="article" paginationId="{{ loop.index }}">
                        <th scope="row">{{ article.id }}</th>
                        <td>{{ article.nom }}</td>
                        <td>{{ article.contenu|reducContent(60) }}...</td>
                        <td class="btnOption">
                            <a target="_BLANK" href="{{ path('article_show', {'id': article.id}) }}"><i class="fad fa-eye"></i></a>
                            <a href="" class="blue"><i class="fad fa-edit"></i></a>
                            <a class="red"><i class="fad fa-times"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div aria-label="Page navigation example">
            <ul paginationBtn="article" class="pagination justify-content-end">
                <div class="btnPagination flex mr-4">
                </div>
            </ul>
        </div>
    </div>
</section>
<script>
addEventListener("load", () => {
    new pagination("article", 7, 10, "table-row");
})
</script>
{% endblock %}