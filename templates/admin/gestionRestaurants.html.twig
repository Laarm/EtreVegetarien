{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des restaurants - Être Végétarien{% endblock %}

{% block body %}
<section id="panel" class="flex">
    <div class="w-100">
        <div paginationView="restaurant">
            <table class="table table-hover contentPagination">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Contenu</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for restaurant in restaurants %}
                    <tr paginationName="restaurant" paginationId="{{ loop.index }}">
                        <th scope="row">{{ restaurant.id }}</th>
                        <td>{{ restaurant.nom }}</td>
                        <td>{{ restaurant.location }}, {{ restaurant.ville }}</td>
                        <td class="btnOption">
                            <a target="_BLANK" href="{{ path('article_show', {'id': restaurant.id}) }}"><i
                                    class="fad fa-eye"></i></a>
                            <a href="{{ path('admin_edit_restaurant', {'id': restaurant.id}) }}" class="blue"><i
                                    class="fad fa-edit"></i></a>
                            <a class="red cursor-pointer" value="{{ restaurant.id }}" data-toggle="modal"
                                data-target="#deleteModal"><i class="fad fa-times"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="flex justify-flex-end">
            <a href="{{ path('adminNewRestaurant') }}" class="new btn btn-primary" role="button"><i
                    class="fad fa-plus"></i>
                Nouveau
            </a>
            <ul paginationBtn="restaurant" class="pagination justify-content-end">
                <div class="btnPagination flex mr-4">
                </div>
            </ul>
        </div>
    </div>
</section>
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Êtes-vous sûr de supprimer cet article ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                <button deleteRestaurant="0" type="button" class="btn btn-primary">Oui</button>
            </div>
        </div>
    </div>
</div>
<script>
    addEventListener("load", () => {
        new pagination("restaurant", 7, 10, "table-row");
    })

    $(document).on('click', '[data-target="#deleteModal"]', function (e) {
        $('[deleteRestaurant]').attr("deleteRestaurant", $(this).attr('value'))
    });

    $(document).on('click', '[deleteRestaurant]', function (e) {
        id = $(this).attr('deleteRestaurant')
        e.preventDefault();
        $.post(
            "{{ path('admin_delete_restaurant') }}",
            {
                id: id
            },
            function (data) {
                if (data.code == '200') {
                    location.reload();
                }
                else {
                    console.log(data)
                }
            },
            'json'
        );
    });
</script>
{% endblock %}